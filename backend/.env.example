# Krilin AI Backend Environment Variables

# Application
APP_NAME="Krilin AI Backend"
DEBUG=True
ENVIRONMENT=development

# Security
SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/krilin_ai

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI Models
# ANTHROPIC_API_KEY: Required for AI workflow generation (ai_workflow_generator.py uses AsyncAnthropic)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Claude Agent SDK - Uses Claude Code CLI authentication for chat agents
# All chat agents use Claude Agent SDK (migrated from Pydantic AI)
# Install: npm install -g @anthropic-ai/claude-code
# To authenticate: run `claude auth login` in terminal

# Model: claude-sonnet-4-5 (best balance of speed, capability, and cost)
# OpenAI not required for this setup
OPENAI_API_KEY=

# Encryption (for OAuth credentials)
# Generate a new key by running: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# CRITICAL: Keep this secret and never commit it to version control!
ENCRYPTION_MASTER_KEY=your-base64-encoded-encryption-key-here

# Google OAuth (for Calendar/Gmail integration)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Whoop OAuth (for fitness data integration)
WHOOP_CLIENT_ID=your-whoop-client-id
WHOOP_CLIENT_SECRET=your-whoop-client-secret

# Strava OAuth (for activity data integration)
STRAVA_CLIENT_ID=your-strava-client-id
STRAVA_CLIENT_SECRET=your-strava-client-secret

# Logging
LOG_LEVEL=INFO